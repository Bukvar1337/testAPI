<h1><%= @post.title %></h1>
<p><%= @post.body %></p>
<% if can? :update, @post %>
<hr>
<%= link_to "Редактировать", edit_post_path(@post), :class => 'btn btn-warning' %>
<%= link_to "Удалить", post_path(@post), method: :delete, data:{confirm:"Хотите удалить анекдот?"},:class => 'btn btn-danger' %>
<hr>
  <%end %>
<h2>Комментарии</h2>
<% @post.comments.each do |comment| %>
  <div class="well">
    <p><strong>
      <%= comment.user.email %>
      :
    </strong></p>
    <p><%= comment.body %></p>
  </div>
<% end %>
<hr>
<h2>Добавление комментария</h2>
<%= form_for([@post, @post.comments.build]) do |f| %>

  <p>
    Комментарий<br>
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
